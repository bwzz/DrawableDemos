<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/inset_linearlayout_divider"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end">

        <TextView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/shape_ring"
            android:text="我被 shape 的 padding 影响了"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rect_angle_as_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_line_inset"/>

    </LinearLayout>
</ScrollView>